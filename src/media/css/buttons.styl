@import 'lib';


button,
a.button
  background $color--primary
  border 0
  border-radius 5px
  color $color--white
  font-family $font--primary
  font-size 14px
  line-height 1
  padding 10px
  text-align center
  text-decoration none
  transition background .2s

  &:hover
    background $color--primary-hover
    color $color--white
    cursor pointer

    a
      color $color--white

  &[disabled],
  &[disabled]:hover
    background $color--disabled
    cursor default
    pointer-events none

  &.button--success
    background $color--success

    &:hover
      background $color--success-hover
  a
    color $color--white


.button--assertive,
.button--delete
  background $color--assertive
  &:hover
    background $color--assertive-hover
